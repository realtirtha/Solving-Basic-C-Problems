using System;
using System.Collections;

namespace csharpbasic
{
    class Programs
    {
        // C# Program to get the Length of the Array
        static void Main(string[] args)
        {
            //declaration & initiation
            int[] arrayA = new int[10];

            int lengthA = arrayA.Length;
            Console.WriteLine("Length of ArrayA: {0}",lengthA);

            long longLength = arrayA.LongLength;
            Console.WriteLine("long length: {0}", longLength);

            int[,] twoD = new int[20, 50];
            Console.WriteLine("size of 2D array is: {0}", twoD.Length);

            Console.ReadLine();
        }
        
    }
}
